generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Categories {
  id   Int          @id @default(autoincrement())
  name String
  type CategoryType
  Transactions Transactions[] 
}

enum CategoryType { // This enum defines the type of category
  income
  expense
}

model Transactions {
  id         Int      @id @default(autoincrement())
  title      String
  nominal    Int
  date       DateTime
  categoryId Int

  // define relation
  Categories Categories @relation(fields: [categoryId], references: [id])
}


